
-- C0NEZ0NE Full Script with All Features

-- ✅ Boot Intro
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local introGui = Instance.new("ScreenGui", playerGui)
introGui.IgnoreGuiInset = true
introGui.ResetOnSpawn = false

local black = Instance.new("Frame", introGui)
black.Size = UDim2.new(1, 0, 1, 0)
black.BackgroundColor3 = Color3.new(0, 0, 0)
black.BackgroundTransparency = 1

local text = Instance.new("TextLabel", introGui)
text.Size = UDim2.new(1, 0, 1, 0)
text.BackgroundTransparency = 1
text.Text = "WELCOME TO C0NEZ0NE!"
text.TextColor3 = Color3.fromRGB(0, 255, 0)
text.TextScaled = true
text.Font = Enum.Font.Code
text.TextTransparency = 1

local function fade(obj, prop, from, to, duration)
    local steps = 30
    for i = 0, steps do
        local v = from + (to - from) * (i / steps)
        obj[prop] = v
        task.wait(duration / steps)
    end
end

fade(black, "BackgroundTransparency", 1, 0, 1)
task.wait(0.5)
fade(text, "TextTransparency", 1, 0, 1)
task.wait(2)
fade(text, "TextTransparency", 0, 1, 1)
task.wait(0.5)
fade(black, "BackgroundTransparency", 0, 1, 1)
introGui:Destroy()

-- ✅ GUI Core Setup
local CoreGui = game:GetService("StarterGui")
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "C0NEZ0NE"

local menu = Instance.new("Frame", gui)
menu.Size = UDim2.new(0, 300, 0, 400)
menu.Position = UDim2.new(0.5, -150, 0.5, -200)
menu.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
menu.BackgroundTransparency = 0.2
menu.Visible = false

-- ✅ Toggle Menu
local UIS = game:GetService("UserInputService")
UIS.InputBegan:Connect(function(i, g)
    if g then return end
    if i.KeyCode == Enum.KeyCode.RightShift then
        menu.Visible = not menu.Visible
    end
end)

-- ✅ Function Buttons
local function newButton(name, callback)
    local b = Instance.new("TextButton", menu)
    b.Size = UDim2.new(1, 0, 0, 30)
    b.Text = name
    b.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    b.Font = Enum.Font.Code
    b.TextColor3 = Color3.new(0, 0, 0)
    b.TextScaled = true
    b.MouseButton1Click:Connect(callback)
end

-- ✅ Sprint
newButton("Sprint", function()
    local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
    if hum then hum.WalkSpeed = 100 end
end)

-- ✅ Slow Walk
newButton("Slow Walk", function()
    local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
    if hum then hum.WalkSpeed = 8 end
end)

-- ✅ Hover
newButton("Hover", function()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    while true do
        task.wait()
        if not hrp or not hrp.Parent then break end
        hrp.Velocity = Vector3.new(0, 50, 0)
    end
end)

-- ✅ Flight
newButton("Fly", function()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    local bv = Instance.new("BodyVelocity", hrp)
    bv.Velocity = Vector3.new(0, 50, 0)
    bv.MaxForce = Vector3.new(0, 1e5, 0)
end)

-- ✅ Teleport
newButton("Teleport Forward", function()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if hrp then hrp.CFrame = hrp.CFrame + hrp.CFrame.LookVector * 50 end
end)

-- ✅ Kill
newButton("Kill Self", function()
    local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
    if hum then hum.Health = 0 end
end)

-- ✅ Platform
newButton("Create Platform", function()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    local part = Instance.new("Part", workspace)
    part.Anchored = true
    part.Size = Vector3.new(10, 1, 10)
    part.Position = hrp.Position - Vector3.new(0, 3, 0)
end)

-- ✅ Glow
newButton("Glow", function()
    local tool = Instance.new("Tool")
    tool.Name = "Lantern"
    local handle = Instance.new("Part", tool)
    handle.Size = Vector3.new(1,1,1)
    handle.Name = "Handle"
    local light = Instance.new("PointLight", handle)
    light.Range = 20
    light.Brightness = 5
    tool.Parent = player.Backpack
end)

-- ✅ Delete Tool
newButton("Delete Tool", function()
    local tool = Instance.new("Tool")
    tool.RequiresHandle = false
    tool.Name = "Delete"
    tool.Activated:Connect(function()
        local target = player:GetMouse().Target
        if target then target:Destroy() end
    end)
    tool.Parent = player.Backpack
end)

-- ✅ Message Spammer
newButton("Spam Message", function()
    while true do
        task.wait(0.2)
        game.ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("C0NEZ0NE RULES", "All")
    end
end)

-- ✅ R6 / R15 Switcher
newButton("Switch R6/R15", function()
    local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
    if hum and hum.RigType then
        local newRig = (hum.RigType == Enum.HumanoidRigType.R15) and Enum.HumanoidRigType.R6 or Enum.HumanoidRigType.R15
        hum.RigType = newRig
    end
end)

-- ✅ ESP
newButton("ESP", function()
    for _, p in ipairs(game.Players:GetPlayers()) do
        if p ~= player and p.Character and p.Character:FindFirstChild("Head") then
            local h = p.Character.Head
            local b = Instance.new("BillboardGui", h)
            b.Size = UDim2.new(0, 100, 0, 40)
            b.Adornee = h
            b.AlwaysOnTop = true
            local t = Instance.new("TextLabel", b)
            t.Text = p.Name
            t.Size = UDim2.new(1, 0, 1, 0)
            t.BackgroundTransparency = 1
            t.TextColor3 = Color3.new(0, 1, 0)
            t.TextScaled = true
        end
    end
end)

-- ✅ Mass TP Items
newButton("Mass TP Items", function()
    for _, item in ipairs(workspace:GetDescendants()) do
        if item:IsA("Tool") then
            item.CFrame = player.Character.HumanoidRootPart.CFrame
        end
    end
end)

-- ✅ Bunny Hop
newButton("Bunny Hop", function()
    while true do
        local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.Jump = true end
        task.wait(0.5)
    end
end)

-- ✅ Wall Climb
newButton("Wall Climb", function()
    local char = player.Character
    local hrp = char and char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    while true do
        hrp.Velocity = Vector3.new(0, 50, 0)
        task.wait(0.2)
    end
end)

-- ✅ Anti-AFK
newButton("Anti-AFK", function()
    local vu = game:GetService("VirtualUser")
    player.Idled:Connect(function()
        vu:Button2Down(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
        task.wait(1)
        vu:Button2Up(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
    end)
end)

-- ✅ TP to Cursor
newButton("TP to Cursor", function()
    local mouse = player:GetMouse()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if mouse and hrp then
        hrp.CFrame = CFrame.new(mouse.Hit.Position + Vector3.new(0, 3, 0))
    end
end)
